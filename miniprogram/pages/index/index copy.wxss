.container {
  width: 80vw;
  border: 1px solid green;
  margin: 100px auto 0;
  padding: 0;
}

.list-container {
  width: 100%;
  border: 1px solid blue;
}

.item {
  display: block;
  background-color: red;
  padding: 10px;
  margin: 5px;
  border-radius: 5px;
  font-size: 16px;
  color: #333;
}

.more-btn {
  display: block;
  background-color: #1677ff;
  padding: 10px;
  margin: 5px;
  border-radius: 5px;
  font-size: 16px;
  color: #fff;
  text-align: center;
}
